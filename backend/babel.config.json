{
  "presets": ["@babel/preset-env", "@babel/preset-typescript"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@constants": "./constants",
          "@controllers": "./controllers",
          "@middlewares": "./middlewares",
          "@models": "./models",
          "@routes": "./routes",
          "@api": "./routes/api",
          "@swagger": "./swagger",
          "@utils": "./utils"
        }
      }
    ]
  ]
}
