{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "declaration": true,
    "declarationDir": "./types",

    "rootDir": "./",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@root": ["./*"],
      "@constants/*": ["./constants/*"],
      "@controllers/*": ["./controllers/*"],
      "@database/*": ["./database/*"],
      "@models/*": ["./models/*"],

      "routes": ["./routes"],
      "@routes/*": ["./routes/*"],

      "api": ["./routes/api"],
      "@api/*": ["./routes/api/*"],

      "@schemas/*": ["./schemas/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "files": ["index.ts", "app.ts"]
}
