{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["./constants/*"],
      "@controllers/*": ["./controllers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@api/*": ["./routes/api/*"],
      "@swagger/*": ["./swagger/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "extends": "./jsconfig.json"
}
