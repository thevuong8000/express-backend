{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "declaration": true,
    "declarationDir": "./types",

    "rootDir": "./",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@root": ["./"],
      "@constants/*": ["./constants/*"],
      "@controllers/*": ["./controllers/*"],
      "@database/*": ["./database/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@api/*": ["./routes/api/*"],
      "@schemas/*": ["./schemas/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "files": ["index.ts", "app.ts"]
}
